class A {
public:
	A() { i = 0; }//静态成员变量不能放在初始化列表当中
	void print() {cout << i << endl; }
	void set(int i) { this->i = i; }
	static void say(int ii) { cout << ii << k << endl; }
private:
	int k;
	static int i;
};

int A::i = 20;//不能加static,作用域相违背

int main()
{
	A a, b;
	a.set(10);
	b.print();
	a.say(10);
	A::say(10);
//	cout << a.i << endl;
//	cout << A::i << endl;

	return 0;
}
